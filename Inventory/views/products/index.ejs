<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

  <!-- <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.js"></script> -->
  <link rel="stylesheet" href="/css/home.css">
  <title>Dashboard</title>
</head>

<body>
  <div class="container">

    <%- include('./partials/side-bar') %>


      <!-- ===============END OF ASIDE=============== -->
      <main>
        <h1>Dashboard</h1>
        <div class="date">
          <input type="date">
        </div>
        <div class="insights">
          <div class="sales">
            <span class="material-symbols-outlined">
              analytics
            </span>
            <div class="middle">
              <div class="left">
                <h3>Total Sales</h3>
                <h1>900150</h1>
              </div>
              <div class="progress">
                <svg>
                  <circle cx='38' cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>81%</p>
                </div>
              </div>
            </div>
            <small class="text-muted">Last 24 Hours</small>
          </div>
          <!----------END OF SALES---------->
          <div class="expenses">
            <span class="material-symbols-outlined">
              bar_chart
            </span>
            <div class="middle">
              <div class="left">
                <h3>Total Expenses</h3>
                <h1>80150</h1>
              </div>
              <div class="progress">
                <svg>
                  <circle cx='38' cy="38" r="36"></circle>
                </svg>

                <div class="number">
                  <p>36%</p>
                </div>
              </div>
            </div>
            <small class="text-muted">Last 24 Hours</small>
          </div>
          <!----------END OF Expense---------->
          <div class="income">
            <span class="material-symbols-outlined">
              stacked_line_chart
            </span>
            <div class="middle">
              <div class="left">
                <h3>Total Income</h3>
                <h1>900150</h1>
              </div>
              <div class="progress">
                <svg>
                  <circle cx='38' cy="38" r="36"></circle>
                </svg>

                <div class="number">
                  <p>25%</p>
                </div>
              </div>
            </div>
            <small class="text-muted">Last 24 Hours</small>
          </div>
          <!----------END OF INCOME---------->
        </div>

        <div class="recent-orders">
          <h2>Recent Orders</h2>

          <table>
            <thead>
              <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
              </tr>
            <tbody>
              <% for (let product of products) { %>
                <tr>
                  <td>
                    <%= product.name %>
                  </td>
                  <td>
                    <%= product.quantity %>
                  </td>
                  <td>
                    <%= product.price %>
                  </td>
                  <td>
                    <%= product.category %>
                  </td>
                  <td><a class="primary" href="/products/<%= product._id %>">Details</a></td>
                </tr>
                <% } %>
            </tbody>
          </table>
          <!-- <a href="">Show All</a> -->
        </div>

      </main>


      <!-- END OF MAIN -->
      <div class="right">
        <div class="top">
          <button id="menu-btn">
            <span class="material-symbols-outlined">
              menu
            </span>
          </button>
          <div class="theme-toggler">
            <span class="material-symbols-outlined active">
              light_mode
            </span>
            <span class="material-symbols-outlined">
              dark_mode
            </span>
          </div>
          <div class="profile">
            <div class="info">
              <p>Hey,<b>Ankit</b></p>
              <small class="text-muted">Admin</small>
            </div>
            <div class="profile-photo">
              <img src="" alt="">
            </div>
          </div>
        </div>
        <!-- END OF TOP -->
        <div class="recent-updates">
          <h2>Recent Updates</h2>
          <div class="updates">
            <div class="update">
              <div class="profile-photo">
                <img src="" alt="">
              </div>
              <div class="message">
                <p><b>Mike Tyson</b>received his order of Night lion tech GPS drone</p>
                <small class="text-muted">2 Minutes Ago</small>
              </div>
            </div>
            <div class="update">
              <div class="profile-photo">
                <img src="" alt="">
              </div>
              <div class="message">
                <p><b>Andrew Tate</b>received his order of Night lion tech GPS drone</p>
                <small class="text-muted">2 Minutes Ago</small>
              </div>
            </div>
            <div class="update">
              <div class="profile-photo">
                <img src="" alt="">
              </div>
              <div class="message">
                <p><b>Ronaldo</b>received his order of Night lion tech GPS drone</p>
                <small class="text-muted">2 Minutes Ago</small>
              </div>
            </div>
          </div>
        </div>
        <!------END OF RECENT UPDATE------- -->
        <div class="sales-analytics">
          <h2>Sales Analytics</h2>
          <div class="item online">
            <div class="icon">
              <span class="material-symbols-outlined">
                shopping_cart
                </span>
            </div>
            <div class="right">
              <div class="info">
                <h3>ONLINE ORDERS</h3>
                <small class="text-muted">Last 24 hours</small>
              </div>
              <h5 class="success">+39%</h5>
              <h3>5165</h3>
            </div>
          </div>
          <div class="item offline">
            <div class="icon">
              <span class="material-symbols-outlined">
                local_mall
                </span>
            </div>
            <div class="right">
              <div class="info">
                <h3>OFFLINE ORDERS</h3>
                <small class="text-muted">Last 24 hours</small>
              </div>
              <h5 class="danger">-17%</h5>
              <h3>1100</h3>
            </div>
          </div>
          <div class="item customers">
            <div class="icon">
              <span class="material-symbols-outlined">
                person
                </span>
            </div>
            <div class="right">
              <div class="info">
                <h3>NEW CUSTOMERS</h3>
                <small class="text-muted">Last 24 hours</small>
              </div>
              <h5 class="success">+25%</h5>
              <h3>845</h3>
            </div>
          </div>
          <div class="item add-product">
            <div>
              <span class="material-symbols-outlined">
                add
                </span>
                <h3>Add Product</h3>
            </div>
          </div>
        </div>
      </div>
  </div>
</body>

</html>